<div class="mb-12">
  <h1 class="text-4xl font-bold mb-4">Movies</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @movies.each do |movie| %>
      <%= link_to movie, class: "bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 p-6" do %>
        <h2 class="text-2xl font-semibold mb-2"><%= movie.title %></h2>
        <p class="text-gray-600"><%= movie.director %> (<%= movie.year %>)</p>
      <% end %>
    <% end %>
  </div>
</div>

<div>
  <h1 class="text-4xl font-bold mb-4">Books</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @books.each do |book| %>
      <%= link_to book, class: "bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 p-6" do %>
        <h2 class="text-2xl font-semibold mb-2"><%= book.title %></h2>
        <p class="text-gray-600"><%= book.author %> (<%= book.year %>)</p>
      <% end %>
    <% end %>
  </div>
</div>