<div class="bg-white rounded-lg shadow-md p-8">
  <h1 class="text-4xl font-bold mb-2"><%= @movie.title %></h1>
  <p class="text-gray-600 text-lg mb-4"><%= @movie.director %> (<%= @movie.year %>)</p>
  <p class="text-gray-800 mb-8"><%= @movie.description %></p>

  <h2 class="text-3xl font-semibold mb-4">Reviews</h2>

  <%= turbo_frame_tag "reviews" do %>
    <div id="reviews_list">
      <%= render @movie.reviews.order(created_at: :desc) %>
    </div>
  <% end %>

  <hr class="my-8">

  <h3 class="text-2xl font-semibold mb-4">Leave a Review</h3>
  <%= turbo_frame_tag "new_review" do %>
    <%= render 'reviews/form', reviewable: @movie, review: @review %>
  <% end %>
</div>